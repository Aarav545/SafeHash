doctype html
head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='with=device-width, initial-scale=1')
  meta(name='description' content='')
  meta(name='author' content='')
  title input password
  link(href="/css/bootstrap.min.css" rel='stylesheet')
  link(href="/css/sign.css" rel='stylesheet')
.container
  form.form-signin(method='POST' action='/result')
    h2.form-signin-heading Input Your First name + Company name
    .form-group
      label.sr-only(for='inpurName') Name
      input#inputName.form-control(type='text' name='name' placeholder='Name' required='' autofocus='')
    .form-group
      label.sr-only(for='comment') Company:
      textarea#comment.form-control(name='company' rows='5' placeholder='Company' required='')
    button.btn.btn-lg.btn-primary.btn-block(type='submit') Get your new password
